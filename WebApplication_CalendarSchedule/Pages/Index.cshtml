@page
@model IndexModel
@{
	ViewData["Title"] = "Calendar";
}

<!DOCTYPE html>
<html>
<head>
	<meta charset='utf-8' />
	<link href='https://cdn.jsdelivr.net/npm/fullcalendar@6.1.11/main.css' rel='stylesheet' />
	<script src='https://cdn.jsdelivr.net/npm/fullcalendar@6.1.11/index.global.min.js'></script>
	<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</head>

<body>
	
	<div id='calendar'>
	</div>

	<!-- Модальное окно для добавления события -->
	<div class="modal" id="createEventModal" tabindex="-1" aria-labelledby="createEventModalLabel" aria-hidden="true">
		<div class="modal-dialog modal-dialog-centered">
			<div class="modal-content">
				<div class="modal-header">
					<h5 class="modal-title" id="createEventModalLabel">Создать событие</h5>
				</div>
				<div class="modal-body">
					<div class="input-group mb-3">
						<span class="input-group-text" id="inputGroup-sizing-default">Название:</span>
						<input type="text" id="eventTitle" class="form-control" aria-describedby="inputGroup-sizing-default">
					</div>

					<div class="input-group mb-3">
						<span class="input-group-text" id="inputGroup-sizing-default">Описание:</span>
						<input type="text" id="eventDescription" class="form-control"  aria-describedby="inputGroup-sizing-default">
					</div>

					<div class="input-group mb-3">
						<span class="input-group-text" id="inputGroup-sizing-default">Начало события:</span>
						<input type="date" id="startDate" class="form-control"  aria-describedby="inputGroup-sizing-default">
						<input type="time" id="startTime" class="form-control"  aria-describedby="inputGroup-sizing-default">
					</div>

					<div class="input-group mb-3">
						<span class="input-group-text" id="inputGroup-sizing-default">Конец события:  </span>
						<input type="date" id="endDate" class="form-control"  aria-describedby="inputGroup-sizing-default">
						<input type="time" id="endTime" class="form-control"  aria-describedby="inputGroup-sizing-default">
					</div>

					<div class="input-group mb-3">
						<label class="input-group-text" for="eventTypeName">Тип события</label>
						<select class="form-select" id="eventTypeName">
							<option selected>Выберите тип события</option>
							<option value="Important">Important</option>
							<option value="Regular">Regular</option>
							<option value="Irrevelant">Irrevelant</option>
						</select>
					</div>

					<div class="form-check form-switch">
						<input class="form-check-input" type="checkbox" id="fullDaySwitch">
						<label class="form-check-label" for="fullDaySwitch">На весь день?</label>
					</div>

				</div>
				<div class="modal-footer">
					<button type="button" class="btn btn-secondary" data-dismiss="modal">Закрыть</button>
					<button type="button" id="saveCreateEventBtn" class="btn btn-primary">Сохранить</button>
				</div>
			</div>
		</div>
	</div>

	<!-- Модальное окно для изменения и удаления события -->
	<div class="modal" id="editDeleteEventModal" tabindex="-1" aria-labelledby="editDeleteEventModalLabel" aria-hidden="true">
		<div class="modal-dialog modal-dialog-centered">
			<div class="modal-content">
				<div class="modal-header">
					<h5 class="modal-title" id="editDeleteEventModalLabel">Информация о событии:</h5>
				</div>
				<div class="modal-body">
					<div class="input-group mb-3">
						<span class="input-group-text">Название:</span>
						<input type="text" id="eventTitleEdDel" class="form-control"  aria-describedby="inputGroup-sizing-default">
					</div>

					<div class="input-group mb-3">
						<span class="input-group-text">Описание:</span>
						<input type="text" id="eventDescriptionEdDel" class="form-control"  aria-describedby="inputGroup-sizing-default">
					</div>

					<div class="input-group mb-3">
						<span class="input-group-text">Начало события:</span>
						<input type="date" id="startDateEdDel" class="form-control"  aria-describedby="inputGroup-sizing-default">
						<input type="time" id="startTimeEdDel" class="form-control"  aria-describedby="inputGroup-sizing-default">
					</div>

					<div class="input-group mb-3">
						<span class="input-group-text">Конец события: </span>
						<input type="date" id="endDateEdDel" class="form-control"  aria-describedby="inputGroup-sizing-default">
						<input type="time" id="endTimeEdDel" class="form-control"  aria-describedby="inputGroup-sizing-default">
					</div>


					<div class="input-group mb-3">
						<label class="input-group-text" for="eventTypeEdDel">Тип события</label>
						<select class="form-select " id="eventTypeEdDel">
							<option selected>Выберите тип события:</option>
							<option value="Important">Important</option>
							<option value="Regular">Regular</option>
							<option value="Irrevelant">Irrevelant</option>
						</select>
					</div>

					<div class="form-check form-switch">
						<input class="form-check-input" type="checkbox" id="fullDaySwitchEdDel">
						<label class="form-check-label" for="fullDaySwitchEdDel">На весь день?</label>
					</div>
				</div>
				<div class="modal-footer">
					<button type="button" id="deleteEventBtn" class="btn btn-danger">Удалить</button>
					<button type="button" class="btn btn-secondary" data-dismiss="modal">Отмена</button>
					<button type="button" id="saveEditEventBtn" class="btn btn-primary">Сохранить</button>
				</div>
			</div>
		</div>
	</div>

</body>
</html>
